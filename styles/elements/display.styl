display
    border-radius()
    display block
    background #fff
    position relative

    .display
        width 100%
        padding-top 100%
        position relative
        overflow hidden

        .padded
            absolute-cover()
            box-sizing border-box

            .inner
                position relative
                width 100%
                height 100%

    .cursor
        position absolute
        opacity .8

        &:after, &:before
            border-radius()
            content ''
            background #666
            position absolute

        &:before
            left -5px
            top -1px
            width 10px
            height 2px

        &:after
            left -1px
            top -5px
            width 2px
            height 10px

    canvas
        border-radius()
        width 100%
        height 100%
        background #f5f5f5

    .actions
        position relative
        padding-bottom 20px
        padding-top 10px
        text-align center
        
        .position-indicator
            display inline-block
            margin 7px 15px
            position absolute
            left 0
            font-weight bold
            font-size 13px
            text-transform uppercase
            color darken(color-grey-dark, 10)
            pointer-events none

            i   
                &.icon-mouse-pointer
                    font-size 12px
                    padding-right 6px
                &.icon-plus
                    font-size 9px
                    padding-right 5px

            .pos-value
                position relative
                display inline-block
                width 30px
                margin-left 3px

        .action
            smooth-font()
            display inline-block
            margin 0 15px
            text-transform uppercase
            font-size 14px
            font-weight bold
            position relative
            top 4px
            cursor pointer

            &.action-share
                color color-blue

            &.action-save
                color color-green

            &.action-reset
                color color-grey-light

            &.action-load
                color color-orange

            i
                top 1px
                opacity .5

            input[type='file']
                absolute-cover()
                opacity 0
                cursor pointer

    .error-display
        border-radius(0 0 3px 3px)
        background color-blue
        text-align center
        position absolute
        left 0
        bottom 0
        width 100%
        box-sizing border-box
        z-index 2
        padding 20px

        &, h3
            color color-white

        h3
            smooth-font()
            margin-bottom 0
            font-size 18px
            font-weight bold

        p
            font-size 14px
            font-style italic
