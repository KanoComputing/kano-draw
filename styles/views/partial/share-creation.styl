.modal-share-creation
    top 50px
    width 480px
    margin-left -240px
    padding 0
    
    .title
        text-transform capitalize
        text-align center
        font-size 28px
        
        span
            font-weight bold
            margin-left 8px
        
        p
            text-transform none
            font-size 18px

    .cover
        max-height 400px
        background-size cover
        background-position center center

    .detail
        padding 20px
        border-top 2px solid color-grey-light
        
    .buttons
        display(inline-flex)
        justify-content(space-between)
        align-items(center)
        margin-bottom 20px
        font-weight bold
        font-size 18px
        
        a.button
            color color-white
            padding 10px
            border-radius(3px)
            
            &:last-child
                margin-right 0
    
    .skip-sharing
        margin-bottom 20px
        margin-top 20px
        
        button.button-success
            background-color color-grey-light
            
            &:hover
                background-color darken(color-grey-light, 5)
