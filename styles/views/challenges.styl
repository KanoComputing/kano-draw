@keyframes challenge-in {
    from {
        transform: translateY(20%);
        opacity: 0;
    }
    to {
        transform: translateY(0%);
        opacity: 1;
    }
}

.page-challenges

    .icon
        width 20px
        height 20px
        margin-right 8px
        
        svg
            width 100%
            height 100%
            fill white

    .weekday
        display none

    .page-title
        position relative
        font-weight bold
        font-size 24px

        .quests
            position absolute
            left 0
            top 0
            font-weight bold
            font-size 20px
            height 100%
            display flex
            align-items center

            a
                color white
                display flex
                flex-direction row
                align-items center
                opacity 0.5
            
                &:hover
                    opacity 1
    
    .header
        background-repeat no-repeat
        background-size contain
        background-position center
        height 180px
        margin-bottom 32px

    ul.worlds-list
        debullet()
        clearfix()
        width 100%
        padding 0
        margin 0 0 30px 0

        li.world-item
            display inline-block
            box-sizing: border-box
            margin 0 20px 20px 0
            width 48%
            animation-name challenge-in
            animation-duration 300ms
            animation-fill-mode both
            animation-timing-function ease-out

            &:nth-of-type(2)
                animation-delay 50ms
            &:nth-of-type(3)
                animation-delay 100ms
            &:nth-of-type(4)
                animation-delay 150ms
            &:nth-of-type(5)
                animation-delay 200ms
            &:nth-of-type(6)
                animation-delay 250ms
            &:nth-of-type(7)
                animation-delay 300ms
            &:nth-of-type(8)
                animation-delay 350ms

            a.world-cover
                width 100%
                display block
                height 240px
                background-color #626770
                position relative
                border-radius(3px 3px 3px 3px)
                transition transform 150ms linear

                &:hover
                    transform: scale(1.02);

                h4
                    position absolute
                    bottom 0
                    left 0
                    right 0
                    background-color color-white
                    color color-black
                    padding 10px
                    font-weight 700
                    font-size 16px
                    smooth-font()
                    border-radius(0 0 3px 3px)

                    &:after
                        icon()
                        circle(20px, transparent)
                        float right
                        font-size 9px
                        margin-top 3px
                        margin-right 3px
                        color color-white
                        line-height 22px
                        margin 0

                &.current
                    box-shadow color-blue 0 0 0 4px
                    border-radius(3px)

                    h4:after
                        content '\e615'
                        background-color color-blue

                &.completed
                    h4
                        background-color color-green
                        color color-white
                        &:after
                            content '\e61d'
                            background-color darken(color-green, 5)

                &.locked
                    filter(grayscale(100%))
                    cursor default

                    h4
                        color darken(color-grey-lighter, 10)
                        &:after
                            content '\e621'
                            margin-top 0
                            background darken(color-grey-lighter, 10)

    ul.challenges-list, ul.shares-list
        debullet()
        clearfix()
        margin -10px
        margin-bottom 30px

        &, h1, h2, h3, h4, h5, h6
            color color-black

        li
            width (100% / 5)
            float left
            padding 10px
            box-sizing border-box

            a
                border-radius()
                no-select()
                display block
                overflow hidden
                background color-white
                position relative

                .detail
                    padding 10px

                h5
                    ellipsis()
                    smooth-font()
                    font-weight bold
                    font-size 15px
                    overflow visible

                    em
                        smooth-font(false)
                        font-weight normal
                        font-style normal
                        margin-left 5px

                    &:after
                        icon()
                        circle(20px, transparent)
                        float right
                        font-size 9px
                        margin-top 3px
                        margin-right 3px
                        color color-white
                        line-height 22px
                        margin 0

                .cover
                    width 100%
                    padding-bottom 100%
                    background-color color-grey-lighter
                    background-position center center
                    background-size cover
                    position relative

                &.current
                    box-shadow rgba(color-blue, 1) 0 0 0 5px

                    h5:after
                        content '\e615'
                        background color-blue

                    .cover
                        opacity .5

                &.completed
                    background color-green

                    h5
                        opacity 1
                        color #fff

                        &:after
                            content '\e61d'
                            background darken(color-green, 5)

                &.locked
                    filter(grayscale(100%))
                    cursor default

                    .cover, h5
                        opacity .3

                    h5:after
                        content '\e621'
                        margin-top 0
                        background color-grey

                &.highlight
                    background-color color-orange

                    .cover
                        background-color mix(color-orange, color-grey-lightest, 40)

                    .detail h5
                        color #fff

                &.browse
                    background-color #1cb2c0

                    .cover
                        background-color #46ddeb

.certificate
    .modal-inner
        top 150px

        .cover
            background-image url('/assets/pixelhack/cert-modal.png')
            background-size 100%
            background-position center center
            background-repeat no-repeat
            min-height 200px


placeholder()
    color mix(color-grey-light, color-grey-lighter, 70%)

::-webkit-input-placeholder
    placeholder()

:-moz-placeholder
    placeholder()

::-moz-placeholder
    placeholder()

:-ms-input-placeholder
    placeholder()
