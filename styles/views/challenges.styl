
.page-challenges


    ul.worlds-list
        debullet()
        clearfix()
        width 100%
        padding 0
        margin 0 0 30px 0

        li.world-item
            display inline-block
            box-sizing: border-box
            margin 0 10px 10px 0 
            width 48%
            border-radius()
            a.world-cover
                width 100%
                display block
                height 200px
                background-color #e4aaf1
                &.locked
                    filter(grayscale(100%))

                    .cover, h5
                        opacity .3

                    h5:after
                        content '\e621'
                        margin-top 0
                        background color-grey
            h4
                background-color color-white
                color color-black
                padding 5px 10px
                font-weight 500
                &.completed
                    background-color color-green
                    color color-white
    ul.challenges-list, ul.shares-list
        debullet()
        clearfix()
        margin -10px
        margin-bottom 30px

        &, h1, h2, h3, h4, h5, h6
            color color-black

        li
            width (100% / 5)
            float left
            padding 10px
            box-sizing border-box

            a
                border-radius()
                no-select()
                display block
                overflow hidden
                background color-white

                .detail
                    padding 10px

                h5
                    ellipsis()
                    smooth-font()
                    font-weight bold
                    font-size 15px
                    overflow visible

                    em
                        smooth-font(false)
                        font-weight normal
                        font-style normal

                    &:after
                        icon()
                        circle(20px, transparent)
                        float right
                        font-size 9px
                        margin-top 3px
                        margin-right 3px
                        color color-white
                        line-height 22px
                        margin 0

                .cover
                    width 100%
                    padding-bottom 100%
                    background-color color-grey-lighter
                    background-position center center
                    background-size cover
                    position relative

                &.current
                    box-shadow rgba(color-blue, 1) 0 0 0 5px

                    h5:after
                        content '\e615'
                        background color-blue

                    .cover
                        opacity .5

                &.completed
                    background color-green

                    h5
                        opacity 1
                        color #fff

                        &:after
                            content '\e61d'
                            background darken(color-green, 5)

                &.locked
                    filter(grayscale(100%))

                    .cover, h5
                        opacity .3

                    h5:after
                        content '\e621'
                        margin-top 0
                        background color-grey

                &.highlight
                    background-color color-orange

                    .cover
                        background-color mix(color-orange, color-grey-lightest, 40)

                    .detail h5
                        color #fff

                &.browse
                    background-color #1cb2c0

                    .cover
                        background-color #46ddeb

.modal-challenge-info
    top 50px
    width 480px
    margin-left -240px
    padding 0

    h3, p
        text-transform none

    h3
        smooth-font()
        font-weight bold
        margin-bottom 5px

    p
        font-size 18px

    .cover
        min-height 400px
        background-size cover
        background-position center center

    .detail
        padding 30px