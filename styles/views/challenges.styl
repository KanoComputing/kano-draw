.page-challenges

    ul.challenges-list, ul.shares-list
        debullet()
        clearfix()
        margin -10px
        margin-bottom 30px

        &, h1, h2, h3, h4, h5, h6
            color color-black

        li
            width (100% / 5)
            float left
            padding 10px
            box-sizing border-box

            a
                border-radius()
                display block
                overflow hidden
                background color-white

                .detail
                    padding 10px

                h5
                    ellipsis()
                    smooth-font()
                    font-weight bold
                    font-size: 15px

                    em
                        smooth-font(false)
                        font-weight normal
                        font-style normal

                .cover
                    width 100%
                    padding-bottom 100%
                    background-color color-grey-lighter
                    background-position center center
                    background-size cover
                    position relative

                &.current
                    box-shadow rgba(color-white, .2) 0 0 0 5px

                    .cover
                        filter(grayscale(50%))

                &.current, &.locked

                    .cover
                        opacity .5

                &.completed h5
                    opacity 1

                &.locked

                    h5
                        opacity .5

                    .cover
                        filter(grayscale(100%))

                        &:after
                            icon()
                            position absolute
                            left 50%
                            top 50%
                            font-size 100px
                            margin-top -(@font-size / 2)
                            margin-left -(@font-size / 2)
                            color color-black
                            opacity .3

                &.highlight

                    .cover
                        background-color mix(color-orange, color-grey-lightest, 40)

                    .detail
                        background-color color-orange

                        h5
                            color #fff

                &.browse

                    .cover
                        background-color #46ddeb

                    .detail
                        background-color #1cb2c0

.modal-challenge-info
    top 50px
    width 480px
    margin-left -240px
    padding 0

    h3, p
        text-transform none

    h3
        smooth-font()
        font-weight bold
        margin-bottom 5px

    p
        font-size 18px

    .cover
        min-height 400px
        background-size cover
        background-position center center

    .detail
        padding 30px
