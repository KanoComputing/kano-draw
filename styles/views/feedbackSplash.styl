.kano-feedback
    bg-image('layout/feedback-normal', contain)
    border-radius 0
    position fixed
    bottom 15px
    right 15px
    width 40px
    height 40px
    opacity 0.5
    transition background 0.7s ease, opacity 0.7s ease
    cursor pointer

    &:hover
        opacity 1
        bg-image('layout/feedback-hover', contain)


.modal-inner.splash.feedback-splash
    text-align center

    form
      padding-top 30px
      max-width 450px
      margin 0 auto

      h1
          color white

    h4
      margin-bottom 0


    textarea
      width 100%
      display inline-block
      padding 15px
      font-family 'Bariol'
      font-size 1.3em
      box-sizing border-box
      resize none

    button:first-child
      background #51555C

      &:hover
        background lighten(#51555C, 20%)

    .form-container
      margin-bottom 15px

    .form-message

      h2
        color white

    .angry
        bg-image('feedback-reactions/Angry', 45px, center, no-repeat)
    .bored
        bg-image('feedback-reactions/Bored', 45px, center, no-repeat)
    .takingoff
        bg-image('feedback-reactions/Growing', 45px, center, no-repeat)
    .happy
        bg-image('feedback-reactions/Happy', 45px, center, no-repeat)
    .sweet
        bg-image('feedback-reactions/Sweet', 45px, center, no-repeat)
    .growing
        bg-image('feedback-reactions/TakingOff', 45px, center, no-repeat)

    .mood-selector
        margin-bottom 25px

        input
            margin 0
            padding 0
            appearance none
            display inline

    .mood-selector input:checked +.mood-container
        background-color orange

    .mood
        cursor pointer
        display inline-block

    .mood-container
        text-align center
        display inline-block
        background #696E77
        transition background 0.5s ease
        border-radius 10px
        margin 0 3px

        &:hover
            background orange

        label
            width 30px
            height 30px
            padding 15px
            margin-bottom -4px

    .feedback-box
        margin-bottom 15px
.hide
    display none
