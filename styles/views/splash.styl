.modal-inner.splash, .modal-inner.challenge-complete
    background color-bg

    .logo-title
        illustration-fixed('layout/draw-logo')
        margin 30px auto 20px

        img
            vertical-align middle

        img:last-of-type
            margin-left 20px

        &.hour-of-code-logo
          illustration-fixed('layout/hour-of-code-logo')

    h3, h4
        color color-white

    h4
        margin-bottom 50px

    h3
        smooth-font()
        margin-bottom 10px
        font-weight bold

    .bottom-section
        background lighten(color-bg, 10)

.modal-inner.challenge-complete

    h4
        margin-bottom 10px

    .logo-title
        margin-bottom 50px

        i
            font-size 11px
            position static

    .bottom-section .button
        margin 20px 8px

    .button.secondary
        button-color(color-orange)
