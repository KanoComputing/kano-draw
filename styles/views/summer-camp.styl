.summer-camp
	.countdown
		padding 80px 0
		background url("/assets/summercamp/wood-asset.png") no-repeat
		background-size contain
		background-position center center
		
		span
			margin 0 10px
			font-size 4em
			font-weight 500
			color #fff
			
			&:first-child
				margin-left 0

			&:last-child
				margin-right 0
		
		.days
			display block
			font-size 6em
			margin-bottom 20px


	div.sc-calendar
		background-color white
		border-radius 5px
		padding 20px
		margin-bottom 250px
		margin-top 20px
		h2
			color black
			text-align center
			margin 0 0 0 0
			padding 20px 0 0 0
			font-weight bold
		h4
			color black
			text-align center
			text-transform uppercase
			font-size 14px
			margin 0
			font-weight bold

	.weekdays_list
		list-style none
		padding 0
		margin 20px 0 0 0

		.weekdays
				box-sizing border-box
				display inline-block
				width 14.2857%
				color color-grey-lighter
				padding 10px 0
				text-align center
				text-transform uppercase
				font-size 0.8rem

				&.current
					color color-grey-darker

	.calendar
		list-style none
		padding 0
		margin  0
		border 3px solid #cecece
		border-radius 3px
		display inline-block
		width 100%
		
		li
			box-sizing border-box
			display inline-block
			width 14.2857%

		.day
			background-color white
			float left

			a
				border 3px solid #A6DA3B
				display block
				position relative
				text-align center
				transition border .2s ease-out
				
				span
					display block
					padding 4px 10px
					position absolute
					left 0
					top 0
					color color-grey
					font-size 1.2rem
					font-weight bold
					font-smoothing antialiased
					z-index 2
					transition color .3s ease-out
				
				.cover
					position relative
					background-position center 25px
					background-size cover
					background-repeat none
					height 100px

					&.unknown
						bg-image('summercamp/ch_icons/question', 70px 70px, false, no-repeat)
					
					for icon in 'campsign' 'location' 'setcamp' 'flag' 'badge' 'fire' 'ghost' 'backpack' 'compass' 'camera' 'bear' 'flashlight' 'guitar' 'cinema'
						challenge_icon(icon)
				
				.img-cover
					position relative
					background-position center center
					background-size cover
					background-repeat none
					height 129px
					opacity .5
					z-index 1
					transition opacity .3s ease-out
					
				.detail
					padding 10px
					text-align center
					
				h5
					ellipsis()
					smooth-font()
					width 100%
					font-weight bold
					font-size 15px
					overflow visible
					text-align center
					color color-grey-darker
					padding 0 0 10px 0;
					transition color .3s ease-out

				&.current
					
					&:hover
						background-color color-orange
						border 3px solid color-orange
						border-radius 3px
						transition background-color .3s ease-in, border .2s ease-in

						h5, span
							color white
							transition color .3s ease-in

					.cover
						opacity .8
				
				&.completed
					bg-image('summercamp/ch_icons/completed', 70px 70px, false, no-repeat)
					background-position center 25px
					
					&:hover
						background-color color-green
						transition background-color .3s ease-in
						
						.img-cover
							opacity 1
							transition opacity .3s ease-in

				&.locked
					filter(grayscale(100%))
					cursor default
					border 3px solid color-grey
					opacity .3

				&.unlocked
					
					&:hover
						background-color color-orange
						border 3px solid color-orange
						border-radius 3px
						h5, span
							color white

					.cover
						opacity .5

	.challenge-info

		.pic 
			display inline-block
			width 29%
			height 277px
			img 
				border-radius 4px
				height 100%
				width 100%
		.detail
			font-family bariol
			display inline-block
			box-sizing border-box
			width 70%
			vertical-align top
			padding 0px 0 0 25px
			color #ada799
			span.cont-label
				font-size 11px
				margin 10 0 0 0
				display block
				color white
			div
				border none
				margin 10px 0 0 0
				padding 0
			div.btn-container
				display inline-block
				width 45%
				text-align right
				vertical-align top
				padding 18px 0 0 0
			div.countdown-next
				background-color color-red
				width 140px
				vertical-align middle
				padding 9px 0 11px 0
				float right
				text-align left
				border-radius 3px
				color white
				.icon-locked
					margin 0  7px 0 10px
					color color-grey-darker
				span 
					vertical-align top
					text-align center
				span.sup 
					font-size 10px
					vertical-align top
					margin 8px 5px 0 0
					line-height 15px
			div.rewards-container
				display inline-block
				width 25%
				vertical-align top
				a
					display inline-block
					float left
					width 40px
					height 40px
					margin-right 15px
				a.rew-wallpaper
					bg-image('summercamp/wallpaper', 40px 40px, false, no-repeat)

				a.rew-outfit
					bg-image('summercamp/suit', 40px 40px, false, no-repeat)


			div.diff-container
				display inline-block
				width 25%

				.difficulty-level
					display inline-block
					width 100%
					margin 0 0 20px 0
					padding 0

					span
						display inline-block
						width 40px
						height 40px

						&.l-easy
							bg-image('summercamp/off_easy', 40px 40px, false, no-repeat)

						&.l-medium
							bg-image('summercamp/off_medium', 40px 40px, false, no-repeat)

						&.l-hard
							bg-image('summercamp/off_hard', 40px 40px, false, no-repeat)


					&[data-level="l-1"]
						span
							&.l-easy
								bg-image('summercamp/easy', 40px 40px, false, no-repeat)

					&[data-level="l-2"]
						span
							&.l-medium
								bg-image('summercamp/medium', 40px 40px, false, no-repeat)

					&[data-level="l-3"]
						span
							&.l-hard
								bg-image('summercamp/hard', 40px 40px, false, no-repeat)

			h4
				text-transform uppercase
				font-size 11px
				font-weight normal
				margin 0 0 10px 0
				color #fff

			h3 
				color #fff
				margin 0 0 10px 0
			.description
				p
					font-size 15px
					line-height 22px
					min-height 145px

	.summercamp-leaderboard
		padding: 40px
		color: #8d887c
		font-weight: bold

		h1
			font-size: 25px
			color: white
			text-align: center
			font-weight: bold
			margin-bottom: 0

		h2
			font-size: 13px
			color: #a8a394
			text-transform: uppercase
			text-align: center
			margin-bottom: 25px
			font-weight: bold

		.leaderboard
			padding: 0
			max-width: 450px
			margin: auto

			.leaderboard-entry
				list-style-type: none;
				height: 74px
				line-height: 74px
				position: relative
				background: white
				margin: 7px 0
				font-size: 20px
				border-radius: 5px
				overflow: hidden;

				a
					position: absolute
					width: 100%
					height: 100%

				&.header
					height: 20px
					line-height: 20px
					margin: 7px 0
					font-size: 12px
					background: none
					text-transform: uppercase
					color: #a8a394


					.position
						font-size: 12px
						color: #a8a394
						background: none

					.detail
						color: #a8a394

						.challenges-complete, .points
							position: relative
							left: 3px
							width: auto

						.challenges-complete
							position: relative
							left: 20px

				&:nth-of-type(2) .position
					color: #a19248
					background: linear-gradient(-45deg, #fbd951 50%, #fce675 50%);

				&:nth-of-type(3) .position
					color: #979797
					background: linear-gradient(-45deg, #ededed 50%, #e3e3e3 50%);

				&:nth-of-type(4) .position
					color: #a37558
					background: linear-gradient(-45deg, #ffc39b 50%, #ffb98d 50%);

				&.user .position
					color: #617f2c
					background: #9bc94b


				.position
					float: left
					height: 74px
					width: 74px
					color: #736d5e
					background: #b7ae97
					font-size: 25px
					text-align: center
				.detail
					width: 100%
					color: #8b8b8b
					*
						margin-left: 15px
					.avatar
						vertical-align: middle
						text-align: center
						width: 46px
						height: 46px
					.user
						color: black
					.challenges-complete
						float: right
						margin-right: 20px
						width: 30px
					.points
						float: right
						margin-right: 30px
						width: 30px

.modal-register
