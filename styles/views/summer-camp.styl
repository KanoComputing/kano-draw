		smooth-font()
		font-weight bold
		margin-bottom 20px
		
	input[type='text']
	input[type='password']
	input[type='email']
	input[type='number']
	input[type='tel'],
	input[type='date']
	textarea
		padding 9px 15px
		background color-white
		display inline-block
		border 1px solid color-ruler-contrast
		border-radius()
		font-family type-body-font
		type-size 1.3
		margin-right 0px
		margin-bottom 20px
		box-sizing border-box
		box-shadow 0 2px 0 0 rgba(#000, .03) inset
		
		&:last-child
			margin-right 0
			margin-bottom 0
			
		&:focus
			border 1px solid color-primary
			outline 0
		
		&.block
			width 100%

