header
    clearfix()
    background color-header
    text-align center
    position relative

    .main-navigation
      min-height 40px
      padding-bottom 20px

    a.logo
        display inline-block
        float left
        margin-right 32px
        display flex
        flex-direction row
        align-items center
        color white
        font-weight bold

        img
            height 37px
        .title
            margin-left: 8px

    ul.nav
        debullet()
        float right
        margin 2px
        font-size 16px

        &.nav-left
            float left

        &.nav-right
            float right

        li
            margin 0 15px
            float left

            &:first-child
                margin-left 0

            &:last-child
                margin-right 0

            a
                smooth-font()
                color color-white
                line-height header-height
                text-transform uppercase
                font-weight bold
                position relative
                opacity 0.5
                display flex
                flex-direction row

                &:hover
                    opacity .7

                &.active
                    opacity 1

                &.signup
                    top 0
            .icon
                display flex
                flex-direction row
                align-items center
                margin-right 4px

                svg
                    width 18px
                    height 18px
                    fill white

                &.big
                    svg
                        width 20px
                        height 20px

            i
                opacity .5
                font-size 18px
                margin-right 5px
                position relative
                top 2px

            button.close
                background color-red
                width 25px
                height @width
                line-height @width
                padding 0
                margin-top 5px

                i
                    font-size 9px
                    opacity 1
                    margin 0
                    position static

                &:hover
                    background lighten(color-red, 5)

        a.user-display
            color color-white
            margin-top 0
            display block
            position relative
            margin-top 2px
            opacity 1

            .avatar
                width 35px
                height @width
                border-radius @width
                overflow hidden
                display inline-block
                margin -10px 10px

                img
                    width @width + 2px
                    height @width
                    margin -1px
