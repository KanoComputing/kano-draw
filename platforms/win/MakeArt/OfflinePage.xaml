<Page
    x:Class="MakeArt.Offline"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MakeArt"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontWeight="Normal" FontSize="48" HorizontalAlignment="Center">Check your connection</TextBlock>
            <TextBlock HorizontalAlignment="Center" FontSize="24">The Projects App needs to be online. It looks like you're not.</TextBlock>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,32,0,0">
                <Button Margin="0,0,16,0" Click="Refresh_Click">Refresh the page</Button>
                <Button Click="CheckConnection_Click">Check connection</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
